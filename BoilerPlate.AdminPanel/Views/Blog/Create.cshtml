@{
	ViewData["Title"] = "Blog Ekle";
}

<div class="container-fluid">
	<div class="card">
		<div class="card-header">
			<h3 class="card-title">Yeni Blog Ekle</h3>
		</div>
		<div class="card-body">
			<form id="addBlogForm" enctype="multipart/form-data">
				<div class="form-group">
					<label for="Title">Başlık</label>
					<input type="text" class="form-control" id="Title" name="Title" required minlength="3">
				</div>

				<div class="form-group">
					<label for="Description">İçerik</label>
					<textarea class="form-control" id="Description" name="Description" required minlength="10"></textarea>
				</div>

				<div class="form-group">
					<label for="CategoryIds">Kategoriler</label>
					<select class="form-control select2" id="CategoryIds" name="CategoryIds" multiple required>
						<!-- Kategoriler JavaScript ile doldurulacak -->
					</select>
				</div>

				<div class="form-group">
					<label for="Images">Resimler</label>
					<div class="custom-file">
						<input type="file" class="custom-file-input" id="Images" name="Images" multiple accept="image/*">
						<label class="custom-file-label" for="Images">Resim seçin...</label>
					</div>
					<div id="selectedImages" class="mt-2 row">
						<!-- Seçilen resimler JavaScript ile gösterilecek -->
					</div>
				</div>

				<button type="submit" class="btn btn-primary">Kaydet</button>
				<a href="/Blog/Index" class="btn btn-secondary">İptal</a>
			</form>
		</div>
	</div>
</div>

@section Styles {
			<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
}

@section Scripts {
			<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
			<script src="~/admin/scripts/blog/create.js"></script>
} 